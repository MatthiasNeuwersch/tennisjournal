<div id="login">
    <header>
        <div class="container">
            <div id="headercontent" >
                <h1>Tennis Journal</h1>
            </div>
        </div>
    </header>

    <main>
        <div class="logincontainer container">

            <form id="login-form" class="received">
                <input class="received" id="login-username" required type="text" placeholder="<%>username<%>"/>
                <input class="received" id="login-password" required type="password" placeholder="<%>password<%>"/>
                <span class='received align-right' id="login-forgot-pw"><%>forgot_pw<%></span>
                <input class='received button' type="submit" id="login-submit" value="<%>login<%>"/>
            </form>
        </div>
    </main>
</div>